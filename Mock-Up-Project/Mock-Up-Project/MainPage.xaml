<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mock_Up_Project.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image Source="Images\logo.png" Aspect="AspectFill"/>

            <Button Text="Login" x:Name="BtnLogin" />
            <Button Text="Register" x:Name="BtnRegister" />
            <Button Text="Continue without login" x:Name="BtnNoLogin"></Button>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
